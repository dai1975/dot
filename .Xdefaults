urxvt*perl-ext-common: default,matcher,urxvt-clipboard
urxvt.transparent: true
urxvt.tintColor: #444444
urxvt.inheritPixmap: true
urxvt.fading: 30

!urxvt.geometry: 72x24
urxvt.saveLines: 512
urxvt.scrollBar: false
urxvt.termName: rxvt

urxvt.allow_bold: false
#urxvt*font: xft:Ricty:pixelsize=20:antialias=true,xft:Noto Sans CJK JP:pixelsize=20:style=DemiLight
#urxvt.letterSpace: -8
#urxvt.lineSpace: 6
urxvt*font: xft:monospace:pixelsize=16:antialias=true,xft:Noto Sans CJK JP:pixelsize=16:style=DemiLight
urxvt.letterSpace: -2
urxvt.lineSpace: 0

!urxvt.iconFile: /usr/share/icons/Humanity/apps/128/gnome-terminal.svg
!urxvt.font: xft:Ricty:Bold:size=10:antialias=true

! color
!urxvt.depth: 32
urxvt.foreground: rgba:ffff/ffff/ffff/ffff
urxvt.background: rgba:0000/0000/0000/cccc

! blue
! from http://blog.asial.co.jp/262
urxvt.color4: #5566ff
urxvt.color12: #7799ff
